<h1>Listing posts</h1>


<br>
<div class="list-group">
  <% @posts.each do |post| %>
  <a href="/posts/<%= post.id %>" class="list-group-item ">

    <h4 class="list-group-item-heading"><%= post.title %></h4>
    <p class="list-group-item-text"><%= post.text %></p>
  </a>
  <%end%>
</div>


<%= link_to 'New Post', new_post_path %>
